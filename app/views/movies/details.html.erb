<h1> <%= @movie.title %> </h1>
<h3> Vote Average:</h3> <%= @movie.vote_average %>
<h3> Runtime:</h3> <%= @movie.runtime %> minutes
<h3> Summary:</h3> <%= @movie.summary %>
<h3> Review Count:</h3> <%= @movie.review_count %>
<br>
<% if @movie.cast %>
  <h3> Cast: </h3> <% @movie.cast.each do |cast| %>
    <p> <%= cast[:name] %> - <%= cast[:character] %> </p>
  <% end %>
  <h3> Reviews: </h3> <% @movie.reviews.each do |review| %>
    <p> Author: <%= review[:author] %> </p>
    <p> Content: <%= review[:content] %>
  <% end %>
<% end %>

<%= button_to "Create Viewing Party", "/users/#{params[:user_id]}/movies/#{@movie.id}/viewing-party/new" %>
<%= link_to "Discover Page", "/users/#{params[:user_id]}/discover" %>
