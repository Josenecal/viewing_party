<%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies?sort=top_rated", method: :get %>

<%= form_with url: "/users/#{@user.id}/movies?sort=keyword", method: :get, local: :true do |f| %>
<%= f.label :movie_title, "Movie Title" %>
<%= f.text_field :movie_title %>
<%= f.submit "Search by Movie Title" %>
<% end %>