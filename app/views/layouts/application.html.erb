<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render partial: "shared/header" %>
    <hr>
    <% flash.each do |type, message| %>
      <strong><%= type %>:</strong> <%= message %>
    <% end %>
    <%= yield %>
  </body>
</html>
